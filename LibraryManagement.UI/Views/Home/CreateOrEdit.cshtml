@model Models.Book

<h2>@(Model.Id == 0 ? "Add New Book" : "Edit Book")</h2>

<form asp-controller="Books" asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Title:</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Author:</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>ISBN:</label>
        <input asp-for="ISBN" />
    </div>
    <button type="submit">@(Model.Id == 0 ? "Add" : "Update")</button>
</form>
