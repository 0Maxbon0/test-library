@model Models.Book

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>
<div>
    <strong>@Model.Title</strong>
</div>

<form asp-controller="Books" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
    <a asp-controller="Books" asp-action="Index">Cancel</a>
</form>
